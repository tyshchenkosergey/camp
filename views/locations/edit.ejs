<%- include("../partials/header.ejs") %>

<div class="container">
	<div>
			<h1 style="text-align:center">Edit " <%= location.name %>"</h1>
		<div style="width:30%; margin:30px auto;" >
			<form action="/location/<%= location._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="location[name]" value="<%=location.name %>" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="location[image]" value="<%=location.image %>" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text"
						  name="location[description]" value="<%=location.description %>" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="location[price]" value="<%=location.price %>">
				</div>
				<div class="form-group">
					<button class="btn btn-outline-success btn-block">Submit</button>
				</div>
		</form>
			<a href="/location">Go back to list of locations</a>
		</div>
	</div>
</div>



<%- include("../partials/footer.ejs") %>