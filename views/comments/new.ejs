<%- include("../partials/header.ejs") %>

<div class="container">
	<div>
			<h1 style="text-align:center">Add new comment to <%= location.name %></h1>
		<div style="width:30%; margin:30px auto;" >
			<form action="/location/<%=location._id%>/comments" method="POST">
				<div class="form-group">
					<textarea class="form-control" type="text" name="comments[text]" placeholder="your comment"> </textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-outline-success btn-block">Submit</button>
				</div>
		</form>
			<a href="/location">Go back to list of locations</a>
		</div>
	</div>
</div>



<%- include("../partials/footer.ejs") %>