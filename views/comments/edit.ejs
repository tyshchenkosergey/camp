<%- include("../partials/header.ejs") %>
<div class="container">
	<div>
			<h1 style="text-align:center">Edit comment %></h1>
		<div style="width:30%; margin:30px auto;" >
			<form action="/location/<%=location_id%>/comments/<%=comments._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<textarea class="form-control" type="text" name="comments[text]" required>
					<%=comments.text %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-outline-success btn-block">Save</button>
				</div>
		</form>
			<a href="/location">Go back to list of locations</a>
		</div>
	</div>
</div>



